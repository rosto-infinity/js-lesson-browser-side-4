
{
    "workbench.iconTheme": "vscode-icons",
    "[dart]": {
      "editor.formatOnSave": true,
      "editor.formatOnType": true,
      "editor.rulers": [
        80
      ],
      "editor.selectionHighlight": false,
      "editor.suggest.snippetsPreventQuickSuggestions": false,
      "editor.suggestSelection": "first",
      "editor.tabCompletion": "onlySnippets",
      "editor.wordBasedSuggestions": false
    },
    "editor.fontFamily": "Fira Code iScript",
    "editor.fontLigatures": true,
"editor.tokenColorCustomizations": {
  "textMateRules": [
    {
      "scope": [
        //following will be in italic
        "variable", // rosto.infinity
        "variable.parameter", // rosto.infinity.parameter
        "variable.function", // rosto.infinity.function
        "variable.function.parameter", // rosto.infinity.function.parameter
        "variable.function.parameter.type", // rosto.infinity.function.parameter.type
        "variable.function.parameter.type.return", // rosto.infinity.function.parameter.type.return
        "variable.function.parameter.type.return.type", // rosto.infinity.function.parameter.type.return.type

        "html", // rosto.infinity
        "code", // rosto.infinity
        "script", // rosto.infinity

        "comment",
        "comment.block",
        "bladeFormatter",
        "blade",
        "paragraph",
        "css",
        "javascript",
        "javascriptreact",
        "php", // rosto.infinity
        "typescript", // rosto.infinity
        "sql", // rosto.infinity
        "laravel", // rosto.infinity
        "mysql", // rosto.infinity
        "postgresql", // rosto.infinity
        "function", // rosto.infinity
        "method", // rosto.infinity
        "class", // rosto.infinity
        "style", // rosto.infinity
        "PDO", // rosto.infinity
        //" ", // rosto.infinity jusqu'a l'infini.................................
        "entity.name.type.class", //class names
        "entity.name.type.sql", //class names
        "keyword", //import, export, return…
        "constant", //String, Number, Boolean…, this, super
        "storage.modifier", //static keyword
        "storage.type.class.js", //class keyword
        
      ],
      "settings": {
      "fontStyle": "italic"
      }
    },
    {
      "scope": [
        //following will be excluded from italics (VSCode has some defaults for italics)
        "invalid",
        "invalid.deprecated",
        "keyword.operator",
        "keyword.control",
        "constant.numeric.css",
        "keyword.other.unit.px.css",
        "constant.numeric.decimal.js",
        "constant.numeric.json",
        "constant.numeric.js",
        "constant.numeric.ts",
        "constant.numeric.tsx",
      ],
      "settings": {
      "fontStyle": " "
      }
    }
  ]
},

"workbench.colorTheme": "One Dark Pro Darker",
"window.zoomLevel": 3,
"editor.inlineSuggest.enabled": true,
"terminal.integrated.sendKeybindingsToShell": true,
"[blade]": {
  "editor.defaultFormatter": "shufo.vscode-blade-formatter"
},
"liveServer.settings.donotShowInfoMsg": true,
"workbench.editorAssociations": {
  "*.pdf": "analyticsignal.preview-pdf"
},
"[css]": {
  "editor.defaultFormatter": "HookyQR.beautify"
},
"[html]": {
  "editor.defaultFormatter": "mohd-akram.vscode-html-format"
},
"editor.formatOnSave": true,
"[javascript]": {
  "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
},
"open-php-html-js-in-browser.selectedBrowser": "Chrome",
"files.autoSave": "afterDelay",
"auto-comment-blocks.hashStyleBlocks": [

],

}